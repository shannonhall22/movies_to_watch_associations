<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @actor.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Image</dt>
              <dd><%= image_tag @actor.image_url %></dd>

              <dt>Bio</dt>
              <dd><%= @actor.bio %></dd>

              <br>

              <dt>Dob</dt>
              <dd><%= @actor.dob %></dd>

              <br>

              <dt>Roles</dt>
              <dd>
                <div class="list-group">
                  <% @actor.role.each do |role|  %>
                    <a href="<%= role_url(role.id) %>" class="list-group-item">
                    <%= role.character_name %>
                    </a>
                  <% end %>
                </div>
              </dd>

              <dt>Movies</dt>
              <dd>
                <div class="list-group">
                  <% @actor.role.each do |movie|  %>
                    <a href="<%= movie_url(movie.movie.id) %>" class="list-group-item">
                    <%= movie.movie.title %>
                    </a>
                  <% end %>
                </div>
              </dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to actors_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_actor_url(@actor.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to actor_url(@actor.id), :method => "delete", :data => { :confirm => "Do you really want to delete this actor?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
