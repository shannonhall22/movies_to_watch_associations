<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @director.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Image</dt>
              <dd><%= image_tag @director.image_url %></dd>

              <dt>Bio</dt>
              <dd><%= @director.bio %></dd>

              <br>

              <dt>Dob</dt>
              <dd><%= @director.dob %></dd>

              <br>

              <dt>Movies Directed</dt>
              <dd>
                <ul class="list-group">
                  <% @director.movie.each do |movie| %>
                    <a href="<%= movie_url(movie.id) %>" class="list-group-item"><%= movie.title %></a>
                  <% end %>
                </ul>
              </dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to directors_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_director_url(@director.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to director_url(@director.id), :method => "delete", :data => { :confirm => "Do you really want to delete this director?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
