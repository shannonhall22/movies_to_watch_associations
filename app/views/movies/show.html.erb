<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @movie.title %>, <%= @movie.year %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Duration</dt>
              <dd><%= @movie.duration %> minutes</dd>

              <dt>Description</dt>
              <dd><%= @movie.description %></dd>

              <dt>Image</dt>
              <dd>
                <%= link_to image_tag("#{@movie.image_url}"), movie_url(@movie.id) %>
              </dd>

              <dt>Director</dt>
              <dd>
                <%= link_to "#{@movie.director.name}", director_url(@movie.director_id) %>
              </dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to movies_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_movie_url(@movie.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to movie_url(@movie.id), :method => "delete", :data => { :confirm => "Do you really want to delete this movie?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
